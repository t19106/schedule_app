<% flash.each do |message_type, message| %>
  <div class="flash"><%= message %></div>
<% end %>
<%= form_with model: schedule do |form| %>
    <div>
      <%= form.text_field :title, placeholder: "予定のタイトル" %>
    </div>
    <div>
      <%= form.text_area :memo, placeholder: "予定の詳細をメモしておきましょう" %><br>
    </div>
    <div class="form-date">
      <div>
        <%= form.label :start_date %>
        <%= form.date_field :start_date, value: DateTime.now.strftime("%Y-%m-%d") %>        
      </div>
      <div>
        <%= form.label :end_date %>
        <%= form.date_field :end_date, value: DateTime.now.strftime("%Y-%m-%d") %>
      </div>
    </div>
    <div class="form-is-allday">
      <%= form.label :is_allday %><%= form.check_box :is_allday, {}, true, false %>        
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>